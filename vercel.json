{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "files/**"
        ]
      }
    },
    {
      "src": "./client/build",   
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {        
      "src": "/(.*)",        
      "dest": "server.js"
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/backend/server.js"
    }
  ]
}